# Application
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000
SESSION_SECRET=change-me-in-development

# Database
DATABASE_URL=postgres://collectflo:collectflo@localhost:5432/collectflo
DATABASE_SSL=false

# Redis (optional for local)
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=collectflo

# JWT
JWT_ACCESS_SECRET=dev-access-secret
JWT_REFRESH_SECRET=dev-refresh-secret
JWT_ISSUER=collectflo-api
ACCESS_TOKEN_EXPIRY=30m
REFRESH_TOKEN_EXPIRY=7d

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# QuickBooks Online (sandbox by default)
QBO_ENVIRONMENT=sandbox
QBO_CLIENT_ID=
QBO_CLIENT_SECRET=
QBO_REDIRECT_URI=http://localhost:3000/auth/qbo/callback

# Email (SendGrid)
SENDGRID_API_KEY=
EMAIL_FROM=noreply@collectflo.local
EMAIL_FROM_NAME=CollectFlo

# SMS (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Payments (Stripe)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
